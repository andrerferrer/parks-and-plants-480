<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1> <%= @garden.name %> </h1>
    <%= link_to 'Edit', edit_garden_path(@garden), class: "btn btn-primary" %>
    <%= link_to 'Back', gardens_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="cards">

  <% @plants.each do |plant| %>
    <div class="plant">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>
        <%= link_to "❌", plant_path(plant), method: :delete, data: { confirm: 'are you sure?' }, class: "btn-delete" %>
      </div>
      <%# Verb here by default is GET %>
    </div>
  <% end %>

</div>


<div class="container">
  <div class="form-wrapper">
    <%= simple_form_for [ @garden, @plant ] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit %>
    <% end %>
  </div>
</div>
